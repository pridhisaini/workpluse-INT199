# Application
PORT=5000
NODE_ENV=production
CORS_ORIGIN=http://localhost:3000

# Authentication
JWT_SECRET=replace_this_with_a_secure_random_string_in_production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Database (PostgreSQL)
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=workpulse
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/workpulse?schema=public"

# Cache & Queues (Redis)
REDIS_HOST=localhost
REDIS_PORT=6379

# Logging
LOG_LEVEL=info
JSON_LOGGING=true
